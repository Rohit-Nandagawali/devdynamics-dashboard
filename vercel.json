{
    "version": 2,
    "builds": [
        {
            "src": "package.json",
            "use": "@vercel/static-build",
            "config": {
                "distDir": "build"
            }
        },
        {
            "src": "api/db.json",
            "use": "@vercel/json-server"
        }
    ],
    "routes": [
        {
            "src": "/api/(.*)",
            "dest": "/api/db.json"
        },
        {
            "src": "/(.*)",
            "dest": "/index.html"
        }
    ]
}